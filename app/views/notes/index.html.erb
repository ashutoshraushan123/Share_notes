<h1>Listing notes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Shared</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.content %></td>
        <td><%= note.share %></td>
        <td><%= link_to 'Show', note %></td> 
        <td><%if current_user.id == note.user_id%><%= link_to 'Edit', edit_note_path(note) %><%end%></td>
        <td><%if current_user.id == note.user_id%><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %><%end%></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path ,class:"btn btn-success "%>
